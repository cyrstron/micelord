{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs", 
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ], 
    "moduleResolution": "node", 
    "downlevelIteration": true,
    "allowJs": true,
    "sourceMap": true, 
    "strict": true,           
    "noImplicitAny": true,   
    "removeComments": true,  
    "preserveConstEnums": true,  
    "outDir": "./.dist",     
    "jsx": "react",  
    "baseUrl": "./src",           
    "paths": {
      "@app/*": [""],
      "@stores/*": ["stores/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@scenes/*": ["scenes/*"],
      "@state/*": ["state/*"],
      "@styles/*": ["styles/*"]
    }, 
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./node_modules/@micelord/**/*",
    "tsconfig.json"
  ]
}
